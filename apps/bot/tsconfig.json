{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"],
      "@commands/*": ["src/commands/*"],
      "@events/*": ["src/events/*"],
      "@services/*": ["src/controllers/services/*"],
      "@utils/*": ["src/utils/*"],
      "@api/*": ["src/api/*"],
      "@config": ["src/utils/config.ts"],
      "@models/*": ["src/models/*"],
      "@controllers/*": ["src/tasks/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*", "./src/"]
}
