{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"],
      "@lib/*": ["lib/*"],
      "@api/*": ["pages/api/*"],
      "@components/*": ["components/*"],
      "@store/*": ["lib/store/*"],
      "@assets/*": ["assets/*"],
      "@styles/*": ["assets/styles/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
