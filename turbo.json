{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "CLIENT_HOSTNAME",
        "CLIENT_PORT",
        "API_HOSTNAME",
        "API_PORT"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "bot#build": {
      "env": [
        "NODE_ENV",
        "DISCORD_TOKEN",
        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "DISCORD_GUILD_ID",
        "DISCORD_TEST_GUILD_ID",
        "TWITTER_API_KEY",
        "TWITTER_KEY_SECRET",
        "TWITTER_BEARER_TOKEN",
        "POCKETBASE_BASE_URL",
        "POCKETBASE_ADMIN_EMAIL",
        "POCKETBASE_ADMIN_PASSWORD",
        "REDIS_HOSTNAME",
        "REDIS_PORT",
        "OPENAI_API_KEY"
      ]
    },
    "web#build": {
      "env": [
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_CLIENT_URL",
        "SECRET_COOKIE_PASSWORD"
      ]
    }
  },
  "globalDependencies": [".env", "package.json", "tsconfig.json"]
}
